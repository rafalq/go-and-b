		document.querySelector(
			"#submit-button-budget"
		);

	const [budgetFormData, budgetDateRangePicker] =
		createAvailbilityParams(
			dateFormat,
			"budget",
			"2"
		);

	budgetSubmitButton.addEventListener(
		"click",
		(event) =>
			searchAvailability(
				event,
				"budget",
				budgetFormData,
				budgetDateRangePicker
			)
	);

	// suite room
	const suiteSubmitButton =
		document.querySelector(
			"#submit-button-suite"
		);

	const [suiteFormData, suiteDateRangePicker] =
		createAvailbilityParams(
			dateFormat,
			"suite",
			"3"
		);

